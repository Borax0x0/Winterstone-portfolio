# MongoDB Connection
MONGODB_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/?retryWrites=true&w=majority&appName=<appName>

# NextAuth Secret (generate with: openssl rand -base64 32)
AUTH_SECRET=<your-auth-secret>

# Email Configuration (Gmail SMTP)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=465
EMAIL_USER=<your-email>@gmail.com
EMAIL_PASS=<your-gmail-app-password>

# Resend API (alternative email provider)
RESEND_API_KEY=<your-resend-api-key>

# Application URL
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Admin Creation Script (optional - used by scripts/create-admin.mjs)
ADMIN_EMAIL=<admin-email>
ADMIN_PASSWORD=<strong-admin-password>
ADMIN_NAME=<admin-name>

# Superadmin Creation Script (optional - used by scripts/create-superadmin.mjs)
SUPERADMIN_EMAIL=<superadmin-email>
SUPERADMIN_PASSWORD=<strong-superadmin-password>
SUPERADMIN_NAME=<superadmin-name>
